# backup/restore steps/tips

# database dump:
pg_dump -v -U image-a-day -F c -f pgdb.dump image-a-day_production

# database restore:
pg_restore -v -i -U image-a-day -d image-a-day_production pgdb.dump

# backup images:
rsync -azhP --ignore-existing image:httpdocs/image-a-day/assets/images/ assets/images

# restore images:
rsync -e ssh -varuzP ~/www/image-a-day/assets/images deploy@linode:sites/image-a-day/assets/images