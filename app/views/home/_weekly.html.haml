- label ||= nil
- classes ||= nil
- image_classes ||= nil
.week{:class => classes }
  - if not label.nil?
    %h2.label
      = label
  %ul.image-list
    - for image in images
      %li
        - if image.class == Image::AbsentImage
          = render 'images/absent', :absent_image => image
        - else
          = render image, :size => :thumb, :details => false, :image_classes => image_classes
